{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, // Ensure this is enabled
    "emitDecoratorMetadata": true // Ensure this is enabled
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
